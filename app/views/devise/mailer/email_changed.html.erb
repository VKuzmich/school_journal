<div class="form-group col">
  <div class="form-group justify-content-md-center offset-3 col-6">
    <p><%= t('.hello')%> <%= @email %>!</p>
    <% if @resource&.unconfirmed_email? %>
      <p><%= t('.we_are_contacting_you')%> <%= @resource.unconfirmed_email %>.</p>
    <% else %>
      <p><%= t('.email_has_been_changed')%>
        <%= @resource.email %>.</p>
    <% end %>
      </div>
</div>

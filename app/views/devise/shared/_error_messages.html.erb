<div class="form-group col">
  <div class="form-group justify-content-md-center">
    <% if resource.errors.any? %>
      <div id="error_explanation" class="form-group offset-3 col-6">
        <h2 class="form-group offset-3 col-6">
          <%= t("errors.messages.not_saved",
                count: resource.errors.count,
                resource: resource.class.model_name.human.downcase)
          %>
        </h2>
        <ul class="form-group offset-3 col-6">
          <% resource.errors.full_messages.each do |message| %>
            <li class="form-group offset-3 col-6"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

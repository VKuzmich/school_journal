<div class="form-group col">
  <div class="justify-content-md-center offset-3 col-6">
    <h2 class=" offset-3 col-6"><%= t('.sign_up_page_title')%></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'form-control' } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.input :id,  collection: [Teacher.order('user_id'), Parent.order('user_id'), Student.order('user_id')], prompt: "Choose a user", label: "Choose a user"%>
      <%= f.input :email, placeholder: t(".email")%>
      <% if @minimum_password_length %>
        <%= f.input :password, placeholder: t(".new_password"),
                  label: "Password (#{t('.characters_minimum', count: @minimum_password_length)})" %>

      <% end %>
      <%= f.input :password_confirmation, placeholder: t(".repeat_password") %>
      <%= f.submit t('.sign_up_button'), class: "actions btn btn-primary" %>
    <% end %>
  </div>
</div>

 <%= render "devise/shared/links" %>

<div class="form-group col">
  <div class="form-group justify-content-md-center">
    <h2 class="form-group offset-3 col-6"><%= t('.page_title')%></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token, class: 'form-control' %>
      <div class="form-group offset-3 col-6">
        <%= f.label :password, t('.new_password') %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</em><br />
        <% end %>
        <%= f.password_field :password, class: 'form-control', placeholder: t('.new-password') %>
      </div>
      <div class="form-group offset-3 col-6">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: t('.new-password') %>
      </div>
      <div class="actions form-group offset-3 col-6">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>

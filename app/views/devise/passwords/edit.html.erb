<div class="form-group col">
  <div class="form-group justify-content-md-center offset-3 col-6">
    <h2><%= t('.page_title')%></h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <% if @minimum_password_length %>
          <em>(<%= t('.characters_minimum', count: @minimum_password_length) %>)</em><br />
      <% end %>
      <%= f.input :password, label: t('.new_password'),  placeholder: t('.new-password') %>
      <%= f.input :password_confirmation, label: t('.confirm_new_password'),  placeholder: t('.new-password') %>
      <%= f.submit t('.change_my_password'), class: "actions btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>

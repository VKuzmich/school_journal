<div class="form-group col">
  <div class="form-group justify-content-md-center offset-3 col-6">
    <h2><%= t('.forgot_your_password_title')%></h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.input_field :email, class: 'form-control', placeholder: t(".email") %>
      <%= f.submit t('.send_password_instructions'), class: "actions btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>

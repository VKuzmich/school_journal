<div class="form-group col">
  <div class="form-group justify-content-md-center offset-3 col-6">
    <h2><%= t('.page_title')%></h2>
    <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.input :email, placeholder: t(".email") %>
      <%= f.submit t('.resend_unlock_instructions'), class: "actions btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>

<table class="table table-striped text-center" border="1" cellspacing="0" cellpadding="0">
  <thead class="thead-dark">
    <tr>
      <th>Hours</th>
        <% time_range.map do |date| %>
      <th>
        <%= date %>
      </th>
    <% end %>
    </tr>
  </thead>
  <tbody>
  <% lessons_data.each do |lesson_data| %>
    <%= render :partial => 'journals/lesson', locals: { lesson_data: lesson_data}  %>
  <% end %>
  </tbody>
</table>


<table class="table table-striped text-center" border="1" cellspacing="0" cellpadding="0">
  <thead class="thead-dark">
    <tr>
      <th>Hours</th>
        <% time_range.map do |date| %>
      <th>
        <%= date %>
      </th>
    <% end %>
    </tr>
  </thead>
  <tbody>

  <% LESSONS.each do |number, dates| %>
    <%= render :partial => 'journals/lesson', locals: { number: number, dates: dates, lessons: @lessons.where(number: number) }  %>
  <% end %>
  </tbody>
</table>

<div class="container">
  <div class="col-md">
    <h2 class="text-center"><%= t('.lesson') %></h2>
    <table class="table table-striped">
      <thead class="thead-dark">
      <tr>
        <th scope="col"><%= t('.teacher')%></th>
        <th scope="col"><%= t('.subject')%></th>
        <th scope="col"><%= t('.grade')%></th>
        <th scope="col"><%= t('.home_task')%></th>
        <th scope="col"><%= t('.description')%></th>
        <th scope="col"><%= t('.date_at')%></th>
        <th scope="col"><%= t('.time') %></th>
        <th colspan=3 scope="col"><%= t('.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @lesson.teacher.full_name %></td>
        <td><%= @lesson.subject.name %></td>
        <td><%= @lesson.grade.grade_group %></td>
        <td><%= @lesson.home_task %></td>
        <td><%= @lesson.description %></td>
        <td><%= @lesson.date_at %></td>
        <td><%= @lesson.created_at.strftime("%B %d, %Y") %></td>
        <td><%= link_to t('.edit'), edit_lesson_path(@lesson.id) %></td>
        <td><%= link_to t('.delete'), lesson_path(@lesson.id), method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to t('.back'), lessons_path, class: "btn btn-primary" %>

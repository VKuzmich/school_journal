<h1 class="text-center"><%= t('.grades_title') %></h1>
<div class="container">
  <table class="table table-striped text-center">
    <thead class="thead-dark">
    <tr>
      <th scope="col"><%= t('.number')%></th>
      <th scope="col"><%= t('.letter')%></th>
      <th scope="col"><%= t('.time') %></th>
      <th colspan=3 scope="col"><%= t('.actions') %></th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'grade', collection: @grades %>
    </tbody>
  </table>
  <hr>
</div>

<%= link_to t('.add_new_grade'), new_admin_grade_path, class: "btn btn-primary" %>

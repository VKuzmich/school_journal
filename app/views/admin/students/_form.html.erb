<h2><%= action_name == 'new' ? 'New' : 'Edit' %> <%= t('.students_title') %></h2>
<br>
<div class="container">
  <%= simple_form_for [:admin, @student], defaults: { input_html: { class: 'form-control' } } do |f| %>
    <%= f.association :user, as: :select, label_method: :full_name, value_method: :id, include_blank: false %>
    <%= f.input :birthday, as: :date,
                start_year: Time.now.year - 90,
                end_year: Time.now.year - 8,
                order: [:day, :month, :year],
                html5: true,
                placeholder: t('.birthday') %>
    <%= f.association :parent, as: :select, label_method: :full_name, value_method: :id, include_blank: false %>
    <%= f.association :grade, as: :select,  label_method: :grade_group, value_method: :id, include_blank: false %>
    <%= f.submit "save", class: "actions btn btn-primary" %>
  <% end %>
  <hr>
  <div class="col-md-3"><%= link_to t('.back'), admin_students_path, class: "btn btn-primary" %></div>
</div>
